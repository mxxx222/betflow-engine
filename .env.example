# FAP - Field Audit Platform Environment Configuration

# Application Settings
FAP_DEBUG=true
FAP_SECRET_KEY=fap-secret-key-change-in-production
FAP_DATABASE_URL=postgresql://fap_user:fap_password@localhost/fap_db
FAP_DB_ENCRYPT_KEY=your-32-char-base64-encryption-key

# MQTT Device Integration
FAP_MQTT_BROKER=localhost
FAP_MQTT_PORT=8883
FAP_MQTT_USER=fap_devices
FAP_MQTT_PASSWORD=device_password

# Finnish Compliance
FAP_TRAFICOM_COMPLIANCE=true
FAP_GDPR_MODE=true
FAP_AUDIT_RETENTION=2555

# Azure AD Integration (Optional)
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id  
# AZURE_CLIENT_SECRET=your-client-secret