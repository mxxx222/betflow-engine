# Example environment file for GDPR Compliance System
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password
AUDIT_POSTGRES_PASSWORD=your-audit-postgres-password

# Redis Configuration  
REDIS_PASSWORD=your-redis-password

# Vault Configuration
VAULT_TOKEN=your-vault-dev-token

# Monitoring Configuration
GRAFANA_PASSWORD=admin
GRAFANA_SECRET_KEY=your-grafana-secret-key
ELASTIC_PASSWORD=your-elastic-password

# External API Tokens (Optional)
NOTION_API_TOKEN=your-notion-integration-token
JIRA_API_TOKEN=your-jira-api-token
JIRA_USERNAME=your-jira-username
JIRA_BASE_URL=https://your-company.atlassian.net

# Google Drive Integration (Base64 encoded service account key)
GOOGLE_SERVICE_ACCOUNT_KEY=your-base64-encoded-service-account-key

# GDPR Configuration
DEFAULT_RETENTION_PERIOD=2y
PSEUDONYMIZATION_ENABLED=true
DATA_MINIMIZATION_ENABLED=true
AUDIT_ALL_ACCESS=true
REQUIRE_MFA=false

# Encryption Configuration
MASTER_KEY_ID=gdpr-master-key-2024
KEY_ROTATION_INTERVAL=24h

# Network Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com
CORS_ENABLED=true
TLS_CERT_PATH=/etc/ssl/certs/server.crt
TLS_KEY_PATH=/etc/ssl/private/server.key

# Logging Configuration
LOG_LEVEL=info
AUDIT_LOG_RETENTION=7y
IMMUTABLE_STORAGE_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# Session Configuration
SESSION_TIMEOUT=8h
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=30m

# Compliance Configuration
DPO_EMAIL=dpo@your-company.com
LEGAL_EMAIL=legal@your-company.com
SECURITY_EMAIL=security@your-company.com
BREACH_NOTIFICATION_WEBHOOK=https://your-incident-management-system.com/webhook

# Development/Testing (Set to false in production)
DEBUG_MODE=false
DISABLE_TLS=false
ALLOW_INSECURE_CONNECTIONS=false